<Window x:Class="_4333Project._4333_Tazyukov"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4333Project"
        mc:Ignorable="d"
        Title="_4333_Tazyukov" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="VerticalAlignment" 
                    Value="Top" />
            <Setter Property="HorizontalAlignment" 
                    Value="Left" />
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Text="Максим, 19" 
                   FontSize="15" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Import Excel" 
                    Margin="0 0 0 0"
                    Click="ButtonImportExcel_Click" />
            <Button Content="Export Excel" 
                    Margin="16 0 0 0" 
                    Click="ButtonExportExcel_Click"/>
            <Button Content="Import JSON" 
                    Margin="16 0 0 0" 
                    Click="ButtonImportJson_Click"/>
            <Button Content="Export JSON" 
                    Margin="16 0 0 0" 
                    Click="ButtonExportJson_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
